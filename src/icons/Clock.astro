---
interface Props {
  size?: number;
  color?: string;
  strokeWidth?: number;
  class?: string;
}

const { 
  size = 24, 
  color = "currentColor", 
  strokeWidth = 2,
  class: className = ''
} = Astro.props;
---

<svg 
  xmlns="http://www.w3.org/2000/svg" 
  width={size} 
  height={size} 
  viewBox="0 0 24 24" 
  fill="none" 
  stroke={color}
  stroke-width={strokeWidth}
  stroke-linecap="round" 
  stroke-linejoin="round"
  class={`lucide lucide-clock ${className}`}
>
  <path d="M12 6v6l4 2"/>
  <circle cx="12" cy="12" r="10"/>
</svg>