---
interface Props {
    title: string;
    description: string;
}
const { title, description } = Astro.props;
---

<div class="w-full md:w-1/2 p-8 rounded-xl shadow-2xl bg-gray-950 border border-yellow-500/20">
    <h2 class="text-3xl font-bold text-center mb-6 text-yellow-300 orbitron uppercase">{title}</h2>
    <p class="text-center text-gray-400 mb-8">
      {description}
    </p>
    <div class="flex flex-col gap-4">
      <slot />
    </div>
  </div>