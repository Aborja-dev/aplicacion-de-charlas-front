---
import type { ISpeaker } from '../../lib/types'
import UserCard from '../UserCard.astro';

interface Props {
    speakers: ISpeaker[]
}
const { speakers } = Astro.props;
---
<section class="bg-gradient-to-br from-[#0d011c] via-[#1a0b2e] to-[#2d1b3d] py-16">
    <div class="w-4/5 mx-auto space-y-4 mb-12 ">
        <h2 class="text-4xl font-bold orbitron text-center bg-gradient-to-r from-violet-300 to-blue-300 bg-clip-text text-transparent">Conoce a los Speakers</h2>
        <p class="text-center text-2xl">Expertos de clase mundial que compartir√°n sus conocimientos y experiencias</p>
    </div>
    <div
        id="speakers-container"
        class="w-4/5 mx-auto grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"
    >
        {
            speakers.map(speaker => <UserCard {...speaker} />)
        }
    </div>
</section>